#include

double sum(double a, double b)
{
double sum = 0.0;
sum = a + b;
return sum;
}

double min(double a, double b)
{
double min = 0.0;
min = a - b;
return min;
}

double mult(double a, double b)
{
double mult = 0.0;
mult = a * b;
return mult;
}

double aver(double a, double b)
{
double aver = 0.0;
aver = (a + b) / 2;
return aver;
}

int main()
{
double a = 0.0;
double b = 0.0;

std::cout << "Enter number a: ";
std::cin >> a;
std::cout << "Enter number b: ";
std::cin >> b;

std::cout << "Sum of numbers is " << sum(a, b);
std::cout << ", Difference of numbers is " << min(a, b);
std::cout << ", Multiplied of numbers is " << mult(a, b);
std::cout << ", Arithmetic mean of numbers is " << aver(a, b);
return 0;
}
